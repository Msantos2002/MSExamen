<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:vm="clr-namespace:MSExamen.ViewModels"
            x:Class="MSExamen.Views.DetallesLugarPage">
    <ContentPage.BindingContext>
        <vm:LugarSeleccionadoViewModelMS />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="{Binding Nombre}" FontSize="24" FontAttributes="Bold" />
            <Label Text="{Binding Descripcion}" FontSize="18" Margin="0,10,0,10" />
            <Label Text="{Binding Direccion}" FontSize="16" />
            <Button Text="Guardar Lugar"
                   Command="{Binding GuardarLugarCommand}"
                   Margin="0,20,0,0" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>